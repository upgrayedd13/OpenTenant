# ----------------------------------
# Flask settings
# ----------------------------------
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=dev-fallback-key

# ----------------------------------
# Database
# ----------------------------------
FLASK_DATABASE_URL=sqlite:///app.db

# ----------------------------------
# Security
# ----------------------------------
FLASK_SESSION_COOKIE_SECURE=0
FLASK_SESSION_COOKIE_HTTPONLY=1
FLASK_SESSION_COOKIE_SAMESITE=Lax

# ----------------------------------
# Optional app settings
# ----------------------------------
FLASK_LOG_LEVEL=DEBUG